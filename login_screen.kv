<LoginScreen>:
    canvas.before:
        Color:
            rgba: 0.1, 0.5, 0.1, 1  # Основний зелений фон
        Rectangle:
            pos: self.pos
            size: self.size

    BoxLayout:
        orientation: "vertical"
        spacing: 20
        padding: 50, 50

        Label:
            text: "Email:"
            color: 0.9, 0.9, 0.9, 1
            font_size: 18

        TextInput:
            id: email_input
            multiline: False
            background_normal: ''
            background_active: ''
            background_color: 0.2, 0.6, 0.2, 1  # Зелений фон для поля введення
            foreground_color: 1, 1, 1, 1  # Білий текст
            font_size: 18

        Label:
            text: "Password:"
            color: 0.9, 0.9, 0.9, 1
            font_size: 18

        TextInput:
            id: password_input
            password: True
            multiline: False
            background_normal: ''
            background_active: ''
            background_color: 0.2, 0.6, 0.2, 1  # Зелений фон для поля введення
            foreground_color: 1, 1, 1, 1  # Білий текст
            font_size: 18

        Button:
            text: "Login/Register"
            background_color: 0.1, 0.4, 0.9, 1  # Синя кнопка
            color: 1, 1, 1, 1  # Білий текст
            font_size: 20
            on_press: root.login_register(self)

        Label:
            id: status_label
            text: ""
            color: 1, 1, 1, 1
            font_size: 16
            size_hint_y: None
            height: 50
            halign: "center"

        Widget:  # Порожній віджет для вирівнювання
            size_hint_y: None
            height: 50
